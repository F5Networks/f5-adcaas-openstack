{
  "name": "openstack",
  "connector": "rest",
  "baseURL": "",
  "crud": true,
  "options": {
    "accept": "application/json",
    "content-type": "application/json"
  },
  "operations": [
    {
      "description": "identity v2 get auth token with user/password",
      "template": {
        "method": "POST",
        "url": "{url}",
        "responsePath": "$",
        "body": "{body}"
      },
      "functions": {
        "v2AuthToken": [
          "url",
          "body"
        ]
      }
    },
    {
      "description": "identity v2 validate user's token.",
      "template": {
        "method": "GET",
        "url": "{url}",
        "responsePath": "$"
      },
      "functions": {
        "v2ValidateToken": [
          "url"
        ]
      }
    },
    {
      "description": "identity v3 get auth token with user/password",
      "template": {
        "method": "POST",
        "url": "{url}",
        "responsePath": "$",
        "body": "{body}"
      },
      "functions": {
        "v3AuthToken": [
          "url",
          "body"
        ]
      }
    },
    {
      "description": "identity v3 validate user's token.",
      "template": {
        "method": "GET",
        "headers": {
          "X-Auth-Token": "{adminToken}",
          "X-Subject-Token": "{userToken}"
        },
        "url": "{url}",
        "responsePath": "$"
      },
      "functions": {
        "v3ValidateToken": [
          "url",
          "adminToken",
          "userToken"
        ]
      }
    },
    {
      "description": "call compute to create virtual server.",
      "template": {
        "method": "POST",
        "headers": {
          "X-Auth-Token": "{userToken}",
          "content-type": "application/json"
        },
        "url": "{url}",
        "body": "{body}",
        "responsePath": "$"
      },
      "functions": {
        "v2CreateServer": [
          "url",
          "userToken",
          "body"
        ]
      }
    },
    {
      "description": "get detail of a created virtual server.",
      "template": {
        "method": "GET",
        "headers": {
          "X-Auth-Token": "{userToken}",
          "content-type": "application/json"
        },
        "url": "{url}",
        "responsePath": "$"
      },
      "functions": {
        "v2VirtualServerDetail": [
          "url",
          "userToken"
        ]
      }
    },
    {
      "description": "create a port within the specific network.",
      "template": {
        "method": "POST",
        "headers": {
          "X-Auth-Token": "{userToken}",
          "content-type": "application/json"
        },
        "url": "{url}",
        "body": "{body}",
        "responsePath": "$"
      },
      "functions": {
        "v2CreatePort": [
          "url",
          "userToken",
          "body"
        ]
      }
    },
    {
      "description": "get a specific network's subnets.",
      "template": {
        "method": "GET",
        "headers": {
          "X-Auth-Token": "{userToken}",
          "content-type": "application/json"
        },
        "url": "{url}",
        "responsePath": "$"
      },
      "functions": {
        "v2GetSubnets": [
          "url",
          "userToken"
        ]
      }
    }
  ]
}
