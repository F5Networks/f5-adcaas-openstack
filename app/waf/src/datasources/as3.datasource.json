{
  "connector": "rest",
  "options": {
    "headers": {
      "accept": "application/json",
      "content-type": "application/json"
    },
    "strictSSL": false
  },
  "operations": [
    {
      "template": {
        "method": "GET",
        "url": "https://admin:admin@{host}:{port}/mgmt/shared/appsvcs/info"
      },
      "functions": {
        "info": ["host","port"]
      }
    },
    {
      "template": {
        "method": "POST",
        "url": "https://admin:admin@{host}:{port}/mgmt/shared/appsvcs/declare",
        "body": "{body}"
      },
      "functions": {
        "deploy": ["host","port","body"]
      }
    }
  ]
}
