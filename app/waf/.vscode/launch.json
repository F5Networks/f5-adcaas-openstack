{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "cwd": "${workspaceFolder}",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--colors",
        "--no-timeouts",
        "--debug-brk",
        // TODO: remove .vscode
        //"${workspaceFolder}/dist/test/<your specific file>.js",
        //"${workspaceFolder}/dist/test/**/*.js",
        "${workspaceFolder}/dist/test/acceptance/openstack.controller.acceptance.js"
      ],
      "runtimeExecutable": null,
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "NODE_ENV": "production"
      },
      "stopOnEntry": false,
      "preLaunchTask": "Single Build"
    },
    {
      "name": "Launch",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/index.js",
      "args": [],
      "cwd": "${workspaceFolder}",
      "protocol": "inspector",
      "preLaunchTask": "Single Build"
    }
  ]
}
